<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="HH:MM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp" android:layout_alignParentTop="true" android:id="@+id/horario_list_hi"
                    android:layout_marginTop="15dp"/>
            <TextView
                    android:text="HH:MM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horario_list_hf"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="10dp" android:layout_below="@+id/horario_list_hi"
                    android:layout_alignParentStart="true"/>
            <TextView
                    android:text="Asignatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horario_list_subject" android:layout_marginTop="8dp" android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/horario_list_hi" android:layout_marginStart="12dp"/>
            <TextView
                    android:text="SalÃ³n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/horario_list_subject"
                    android:layout_alignEnd="@+id/horario_list_subject" android:id="@+id/horario_list_salon" android:layout_marginTop="9dp"
                    android:layout_marginEnd="8dp" android:layout_toEndOf="@+id/horario_list_hi"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="Profesor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_below="@+id/horario_list_salon"
                    android:id="@+id/horario_list_teacher" android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/horario_list_hf"
                    android:layout_marginStart="12dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>