<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp" app:srcCompat="@drawable/ic_launcher_background"
                    android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                    android:maxHeight="90dp"
                    android:id="@+id/event_imageview"/>
            <TextView
                    android:text="Title"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:id="@+id/event_title" android:layout_marginTop="10dp"
                    android:layout_below="@+id/event_imageview"/>
            <TextView
                    android:text="Publicado: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp" android:id="@+id/event_postdate"
                    android:layout_marginTop="11dp" android:layout_below="@+id/event_title"/>
            <Button
                    android:text="Ver mÃ¡s"
                    android:layout_width="match_parent"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/def_light_button"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_viewmore"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="0dp" android:layout_alignParentBottom="true"
                    android:layout_marginStart="100dp" android:layout_marginEnd="100dp"
                    android:layout_marginTop="18dp" android:layout_below="@+id/event_body"/>
            <TextView
                    android:text="Body text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp" android:id="@+id/event_body"
                    android:layout_marginTop="12dp" android:layout_below="@+id/event_postdate"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>